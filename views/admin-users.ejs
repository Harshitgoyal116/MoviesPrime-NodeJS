<%- include("partials/header"); -%>
<%- include("partials/admin-navbar"); -%>

<h1 class="text-center top-heading">User Management</h1>
<br>

<!-- Display Error -->
<% if(messages.error){ %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error!</strong> <%= messages.error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
<!-- Display Error -->

<!-- Display Success -->
<% if(messages.success){ %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> <%= messages.success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
<!-- Display Success -->

      <!-- Table of all movies -->
      <table class="table table-dark table-hover text-center" >
        <thead>
            <tr>
              <th>Name</th>
              <th>Email ID</th>
                <th>
                    <a href="/auth/admin-register" class="btn btn-outline-light search-btn">Add New User</a>
                </th>

            </tr>
        </thead>
        <tbody>
          <% data.forEach(Data=>{ %>
            <tr>
              <td><%= Data.name %></td>
              <td><%= Data.username %></td>
                <td><%= Data.role %></td>
                <!-- <td class="action-btn">
                  <i class="fas fa-trash mx-4"></i>
                  <i class="fas fa-edit"></i>
                </td> -->
            </tr>
          <% }) %> 
        </tbody>
      </table>

<%- include("partials/footer"); -%>