<%- include("partials/header"); -%>
  <%- include("partials/navbar"); -%>

    <h1 class="text-center top-heading">Welcome to Movies Prime</h1>

    <!-- Show case -->
    <div class="showcase container my-3">
      <h5 class="my-3">Search Result</h5>
      <!-- Item list -->
      <div class="container my-5">
        <div class="row">
          
          <div class="col mb-4">
            <div class="card bg-dark-light" style="width: 20rem;">
              <img src="/uploads/<%= data.image %>" class="card-img-top" alt="movie cover" width="100%" height="200px">
              <div class="card-body">
                <h5 class="card-title"><%= data.name %></h5>
                <div class="card-text">Language: <%= data.language %></div>
                <div class="card-text">Genre: <%= data.category %></div>
                <p class="card-text">Year: <%= data.year %></p>
                <small id="desc" class="form-text text-muted desc"><%= data.description %></small><br>
                <% if(data.link == '#'){ %>
                  <a href="<%= data.link %>" class="btn btn-outline-secondary">Comming Soon</a>
                <% }else{ %>  
                  <a href="<%= data.link %>" class="btn btn-outline-secondary">Download</a>
                <% } %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <!-- Show case -->

    <%- include("partials/footer"); -%>