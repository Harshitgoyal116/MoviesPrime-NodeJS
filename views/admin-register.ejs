    <div class="container col-md-4 login-form">
        <h1 class="text-center top-heading admin-heading">Movies Prime Admin</h1>
        <form class="my-login-form" action="/auth/admin-register" method="POST">
            <h3 class="my-5">Please Register</h3>
            <div class="mb-3">
              <label for="username" class="form-label">Email address</label>
              <input type="email" class="form-control input-field" id="username" name="username" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control input-field" id="name" name="name" aria-describedby="emailHelp" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control input-field" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="cpassword" class="form-label">Confirm Password</label>
              <input type="password" class="form-control input-field" id="cpassword" name="cpassword" required>
              <div id="emailHelp" class="form-text">Make sure the password should be matched!</div>

            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input checkbox" id="passwordVisibleBox" onclick="isPassandcpassVisible()">
              <label class="form-check-label" for="passwordVisibleBox">Show Password</label>
            </div>
            <button type="submit" class="btn btn-outline-light form-control">Sign up</button>
          </form>
    </div>
    
    <script src="/js/password.js"></script>
    <%- include("partials/footer"); -%>
